#include "MeMCore.h"
/**
 * For Motor 1, which is the Right Wheel, 
 * '+' is Forward, '-' is Backward.
 * For Motor 2, which is the Left Wheel, 
 * '-' is Forward, '+' is Backward.
 */

MeDCMotor motor1(M1);

MeDCMotor motor2(M2);

MeUltrasonicSensor ultraSensor(PORT_3); /* Ultrasonic module can ONLY be connected to port 3, 4, 6, 7, 8 of base shield. */

uint8_t motorSpeed = 100;

void setup(){
}

void loop()
{
  int duration = ultraSensor.distanceCm();
  delay(100); /* the minimal measure interval is 100 milliseconds */
 
  motor1.run(-motorSpeed);
  motor2.run(+motorSpeed);
  
  if ( duration < 8){
  motor1.run(+motorSpeed);
  motor2.run(+motorSpeed);
  delay(1100);
  } 
}
